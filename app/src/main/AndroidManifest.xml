<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.lily">

    <!-- 使用网络的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CCBActivity"/>
        <activity android:name=".activity.CircleActivity" />
        <activity android:name=".activity.TabActivity" />
        <activity android:name=".activity.SlidingTabBarActivity" />
        <activity android:name=".activity.TestActivity" />
        <activity android:name=".activity.DefaultPicActivity" />
        <activity android:name=".activity.AbroadBoutiqueTestActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity android:name=".colortrackview.ViewPagerUseActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
        <activity android:name=".nestedscrollview.NestedScrollActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>
    </application>

</manifest>